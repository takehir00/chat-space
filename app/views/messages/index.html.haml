!!!
%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
    -# = stylesheet_link_tag "application.scss"

  %body

  %header
    %p チャットグループが作成されました



  %nav
    .nav__user
      %ul
        %li.ul__name
          = current_user.name
        - if user_signed_in?
          %li.ul__edit
            =link_to new_group_path, class: "ul__edit__link", method: :get do
              =fa_icon "edit"
          %li.ul__cog
            =link_to edit_user_path(current_user), class: "ul__cog__link", method: :get do
              =fa_icon "cog"


    .nav__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %h2
            = group.name
          %p
            = group.show_last_message

  .chat
    .chat__header
      %h2
        =@group.name
      %p
        - @group.users.each do |user|
          =user.name

      = link_to edit_group_path(@group) do
        .edit
          edit

    .chat__content
      = render @messages



    .chat__fotter
      = form_for [@group, @message], html: {id: "new_message"} do |f|
        = f.text_field :body, class: 'chat__fotter__text', placeholder: 'type a message'
        = f.label :avatar do
          %span.chat__fotter__icon
            =fa_icon "image"
          = f.file_field :avatar, class: 'chat__fotter__filesend'
        = f.submit 'Send', class: 'chat__fotter__submit'
